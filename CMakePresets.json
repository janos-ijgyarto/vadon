{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 1,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "common",
      "description": "Shared settings for all configurations",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_SKIP_INSTALL_ALL_DEPENDENCY": true,
        "CMAKE_POLICY_VERSION_MINIMUM": "3.5",
        "VADON_PRESET_NAME": "${presetName}",
        "VADON_BUILD_DIR_ROOT": "${sourceDir}/out/build",
        "VADON_INSTALL_DIR_ROOT": "${sourceDir}/out/install",
        "VADON_LINK_STATIC": "OFF"
      },
      "warnings": { "dev": false }
    },
    {
      "name": "engine-base",
      "description": "Sets build and install directory",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/engine/${presetName}",
      "installDir": "${sourceDir}/out/install/engine/${presetName}",
      "cacheVariables": {
        "VADON_CONFIGURATION_MODE": "ENGINE",
        "VADON_PLATFORM_INTERFACE": "DEFAULT",
        "VADON_GRAPHICS": "DEFAULT",
        "VADON_ENABLE_APPLICATION": "ON",
        "VADON_ENABLE_DEMO": "ON"
      },
      "inherits": "common"
    },
    {
      "name": "tools-base",
      "description": "Sets build and install directory",
      "hidden": true,
      "binaryDir": "${sourceDir}/out/build/tools/${presetName}",
      "installDir": "${sourceDir}/out/install/tools/${presetName}",
      "cacheVariables": {
        "VADON_CONFIGURATION_MODE": "TOOLS",
        "VADON_TOOLS_ENGINE_BUILD": "OFF",
        "VADON_TOOLS_ENABLE_EDITOR": "OFF"
      },
      "environment": {
        "VADON_TOOLS_INSTALL_OUT": "${sourceDir}/out/install/tools/${presetName}"
      },
      "inherits": "common"
    },
    {
      "name": "platform-windows",
      "description": "Base preset for Windows",
      "hidden": true,
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "VADON_PLATFORM": "windows"
      }
    },
    {
      "name": "platform-linux",
      "description": "Base preset for Linux",
      "hidden": true,
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Linux" ]
        }
      },
      "cacheVariables": {
        "VADON_PLATFORM": "linux"
      }
    },
    {
      "name": "generator-vs",
      "description": "Base preset for configurations using VS 2022 as the generator",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [ "Windows" ]
        }
      }
    },
    {
      "name": "generator-ninja",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "name": "compiler-cl",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "VADON_COMPILER": "cl"
      }
    },
    {
      "name": "compiler-clang-cl",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang-cl",
        "CMAKE_CXX_COMPILER": "clang-cl",
        "VADON_COMPILER": "clang-cl"
      },
      "toolset": "ClangCL",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "intelliSenseMode": "windows-clang-x64"
        }
      }
    },
    {
      "name": "compiler-g++",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_COMPILER": "g++",
        "VADON_COMPILER": "g++"
      }
    },
    {
      "name": "architecture-win32",
      "hidden": true,
      "architecture": {
        "value": "Win32",
        "strategy": "set"
      }
    },
    {
      "name": "architecture-x64",
      "hidden": true,
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "config-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CONFIGURATION_TYPES": "Debug",
        "VADON_CONFIGURATION": "debug"
      }
    },
    {
      "name": "config-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CONFIGURATION_TYPES": "Release",
        "VADON_CONFIGURATION": "release"
      }
    },
    {
      "name": "link-static",
      "hidden": true,
      "cacheVariables": {
        "VADON_LINK_STATIC": "ON"
      }
    },
    {
      "name": "windows-cl-debug",
      "hidden": true,
      "displayName": "MSVC debug",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "platform-windows", "generator-ninja", "compiler-cl", "config-debug" ]
    },
    {
      "name": "windows-cl-release",
      "hidden": true,
      "displayName": "MSVC release",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "platform-windows", "generator-ninja", "compiler-cl", "config-release" ]
    },
    {
      "name": "windows-cl-debug-static",
      "hidden": true,
      "displayName": "MSVC debug STATIC",
      "description": "Windows Ninja build using MSVC (static linkage)",
      "inherits": [ "link-static", "windows-cl-debug" ]
    },
    {
      "name": "windows-cl-release-static",
      "hidden": true,
      "displayName": "MSVC release STATIC",
      "description": "Windows Ninja build using MSVC (static linkage)",
      "inherits": [ "link-static", "windows-cl-release" ]
    },
    {
      "name": "linux-ninja-g++",
      "hidden": true,
      "description": "Linux Ninja build using g++",
      "inherits": [ "platform-linux", "generator-ninja", "compiler-g++" ]
    },
    {
      "name": "engine-windows-cl-debug",
      "displayName": "Engine Debug (MSVC)",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "engine-base", "windows-cl-debug" ]
    },
    {
      "name": "tools-windows-cl-debug",
      "displayName": "Tools Debug (MSVC)",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "tools-base", "windows-cl-debug" ]
    },
    {
      "name": "engine-windows-cl-release",
      "displayName": "Engine Release (MSVC)",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "engine-base", "windows-cl-release" ]
    },
    {
      "name": "tools-windows-cl-release",
      "displayName": "Tools Release (MSVC)",
      "description": "Windows Ninja build using MSVC",
      "inherits": [ "tools-base", "windows-cl-release" ]
    }
  ],
  "buildPresets": [
    {
      "name": "Demo-base",
      "hidden": true,
      "cleanFirst": false,
      "targets": [ "VadonDemoGame", "VadonDemoEditor" ]
    },
    {
      "name": "Demo-debug-cl",
      "displayName": "MSVC Debug",
      "description": "Windows debug build using cl",
      "inherits": "Demo-base",
      "configurePreset": "engine-windows-cl-debug",
      "configuration": "Debug"
    },
    {
      "name": "Demo-release-cl",
      "displayName": "MSVC Release",
      "description": "Windows release build using cl",
      "inherits": "Demo-base",
      "configurePreset": "engine-windows-cl-release",
      "configuration": "Release"
    },
    {
      "name": "Demo-debug-win64-cl-static",
      "displayName": "MSVC Debug STATIC",
      "description": "Windows debug build using cl",
      "inherits": "Demo-base",
      "configurePreset": "windows-cl-debug-static",
      "configuration": "Debug"
    },
    {
      "name": "Demo-release-win64-cl-static",
      "displayName": "MSVC Release STATIC",
      "description": "Windows release build using cl",
      "inherits": "Demo-base",
      "configurePreset": "windows-cl-release-static",
      "configuration": "Release"
    }
  ]
}